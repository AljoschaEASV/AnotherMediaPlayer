<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXSlider?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.media.MediaView?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="400.0"
            minWidth="600.0" prefHeight="400.0" prefWidth="600.0" stylesheets="@Presentation/MediaPlayerLooks.css"
            xmlns="http://javafx.com/javafx/8.0.171" fx:controller="sample.Controller">
    <bottom>
        <VBox alignment="CENTER" prefHeight="26.0" prefWidth="600.0" BorderPane.alignment="CENTER">
            <children>
                <Slider fx:id="vidScroller"/>
                <HBox alignment="CENTER" prefHeight="0.0" prefWidth="600.0">
                    <children>
                        <Button fx:id="playlistFile" minHeight="40.0" mnemonicParsing="false" onAction="#openNewWIndow"
                                prefWidth="40.0">
                            <HBox.margin>
                                <Insets left="10.0" right="10.0"/>
                            </HBox.margin>
                        </Button>
                        <Button fx:id="playButton" minHeight="40.0" mnemonicParsing="false" onAction="#playVideo" prefWidth="40.0">
                            <HBox.margin>
                                <Insets left="10.0" right="10.0" />
                            </HBox.margin>
                        </Button>
                        <Button fx:id="pauseButton" mnemonicParsing="false" onAction="#pauseVideo" prefHeight="40.0" prefWidth="40.0">
                            <HBox.margin>
                                <Insets left="10.0" right="10.0" />
                            </HBox.margin>
                        </Button>
                        <Button fx:id="backToStart" mnemonicParsing="false" onAction="#toStart" prefHeight="40.0" prefWidth="40.0">
                            <HBox.margin>
                                <Insets left="10.0" right="10.0" />
                            </HBox.margin>
                        </Button>
                        <Button fx:id="stopButton" mnemonicParsing="false" onAction="#stopVideo" prefHeight="40.0" prefWidth="40.0">
                            <HBox.margin>
                                <Insets left="10.0" right="10.0" />
                            </HBox.margin>
                        </Button>
                        <Button fx:id="OpenTestFile" mnemonicParsing="false" onAction="#getFile" prefHeight="40.0" prefWidth="40.0" />
                        <Button fx:id="shutdown" mnemonicParsing="false" onAction="#exit" prefHeight="40.0" prefWidth="40.0">
                            <HBox.margin>
                                <Insets left="10.0" />
                            </HBox.margin>
                        </Button>
                        <JFXSlider fx:id="slider" prefHeight="40.0" prefWidth="166.0" />
                    </children>
                </HBox>
            </children>
        </VBox>
    </bottom>
    <center>
        <StackPane prefHeight="335.0" prefWidth="600.0" BorderPane.alignment="CENTER">
            <children>
                <MediaView fx:id="mediaViewer" fitHeight="200.0" fitWidth="200.0" onMouseClicked="#getFile" />
            </children>
        </StackPane>
    </center>
</BorderPane>

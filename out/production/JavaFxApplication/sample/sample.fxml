                                <Insets left="10.0" right="10.0" />
                            </HBox.margin>
                        </Button>
                        <Button fx:id="playButton" minHeight="40.0" mnemonicParsing="false" onAction="#playVideo" prefWidth="40.0">
                            <HBox.margin>
                                <Insets left="10.0" right="10.0" />
                            </HBox.margin>
                        </Button>
                        <Button fx:id="pauseButton" mnemonicParsing="false" onAction="#pauseVideo" prefHeight="40.0" prefWidth="40.0">

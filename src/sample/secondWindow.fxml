<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.effect.Blend?>
<?import javafx.scene.layout.Pane?>
<Pane xmlns:fx="http://javafx.com/fxml/1" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="320.0" minWidth="760.0"
      prefHeight="327.0" prefWidth="762.0" stylesheets="@Presentation/PlayListStyles.css"
      xmlns="http://javafx.com/javafx/8.0.171" fx:controller="sample.ControllerSecond">
    <children>
        <JFXButton fx:id="deletePlaylist" layoutX="608.0" layoutY="7.0" onAction="#deletePlaylist" prefHeight="50.0"
                   prefWidth="50.0" text="¨,"/>
        <TableView fx:id="tbData" editable="true" layoutX="14.0" layoutY="61.0" prefHeight="253.0" prefWidth="234.0">
            <columns>
                <TableColumn fx:id="title" prefWidth="117.0" style="-fx-background-color: transparent;" text="Title"/>
                <TableColumn fx:id="category" prefWidth="117.0" style="-fx-background-color: transparent;"
                             text="Category"/>
            </columns>
            <effect>
                <Blend mode="OVERLAY"/>
            </effect>
        </TableView>
        <Button fx:id="ArrowLeft" layoutX="277.0" layoutY="196.0" mnemonicParsing="false" onAction="#deleteEntry"
                prefHeight="59.0" prefWidth="52.0"/>
